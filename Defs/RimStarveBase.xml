				<li>OrganicStandard</li>
			</hediffGiverSets>
		</race>
		<recipes>
			<li>ExciseCarcinoma</li>
			<li>RemoveBodyPart</li>
			<li>Euthanize</li>
		</recipes>
	</ThingDef>

	<PawnKindDef Name="RimStarveKindBase" Abstract="True">
	</PawnKindDef>

  <!-- resources -->

